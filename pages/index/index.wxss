.index-page {
  box-sizing: border-box;
  padding: 30rpx;
  min-height: 100vh;
  width: 100vw;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 50rpx;
  color: white;
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 手势演示区域 */
.gesture-demo-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.section-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.demo-hint {
  text-align: center;
  font-size: 26rpx;
  color: #667eea;
  margin-top: 20rpx;
  font-weight: 500;
}

/* 功能导航 */
.feature-nav {
  margin-bottom: 40rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 30rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.nav-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 25rpx;
}

.nav-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 35rpx 25rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-icon {
  font-size: 56rpx;
  margin-bottom: 15rpx;
}

.nav-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.nav-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

.result {
  text-align: center;
}
