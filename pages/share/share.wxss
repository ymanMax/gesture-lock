.container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-sizing: border-box;
}

/* 区域标题 */
.section-header {
  text-align: center;
  margin-bottom: 40rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 行数选择器 */
.rows-selector {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.selector-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.rows-options {
  display: flex;
  gap: 20rpx;
}

.option {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  transition: all 0.3s ease;
}

.option.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: scale(1.05);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

/* 手势绘制区域 */
.gesture-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.gesture-hint {
  text-align: center;
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 信息填写表单 */
.info-form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
}

.input::placeholder {
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.btn-primary:active {
  transform: scale(0.95);
}

.btn-primary:disabled {
  opacity: 0.5;
  transform: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-secondary:active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.95);
}

/* 创建按钮容器 */
.create-btn-container,
.import-btn-container {
  margin-bottom: 30rpx;
}

.create-btn,
.import-btn {
  width: 100%;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  border: 2rpx dashed #667eea;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.create-btn:active,
.import-btn:active {
  transform: scale(0.98);
  background: rgba(102, 126, 234, 0.1);
}

.btn-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.btn-text {
  font-size: 28rpx;
}

/* 手势列表 */
.gesture-list {
  margin-bottom: 30rpx;
}

.gesture-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.gesture-info {
  display: flex;
  gap: 25rpx;
  margin-bottom: 25rpx;
}

.gesture-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  flex-shrink: 0;
}

.gesture-thumb image {
  width: 100%;
  height: 100%;
}

.gesture-details {
  flex: 1;
  min-width: 0;
}

.gesture-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.gesture-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
  gap: 8rpx;
}

.meta-item {
  font-size: 22rpx;
}

.gesture-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.gesture-time {
  font-size: 22rpx;
  color: #999;
}

/* 手势操作 */
.gesture-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 15rpx 25rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: #e8e8e8;
}

.action-item.danger {
  background: #fff1f0;
  color: #ff4d4f;
}

.action-item.danger:active {
  background: #ffe0dd;
}

.action-item.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.action-icon {
  font-size: 28rpx;
}

.action-text {
  font-size: 22rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: rgba(255, 255, 255, 0.8);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.empty-action-btn {
  padding: 25rpx 60rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  display: inline-flex;
  align-items: center;
  gap: 15rpx;
}

.empty-action-btn:active {
  transform: scale(0.95);
}

/* 预览弹窗 */
.preview-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
}

.preview-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  max-width: 600rpx;
  width: 100%;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.close-btn {
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.close-btn:active {
  transform: scale(0.98);
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .gesture-info {
    flex-direction: column;
    gap: 20rpx;
  }

  .gesture-thumb {
    width: 100%;
    height: 200rpx;
  }

  .gesture-actions {
    justify-content: center;
  }
}
