/* statistics.wxss */
.statistics-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.chart-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.chart {
  width: 100%;
  height: 300px;
  margin: 0 auto;
}