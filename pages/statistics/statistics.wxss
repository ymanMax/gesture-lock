/* statistics.wxss */
.statistics-container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.refresh-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #45B7D1;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(69, 183, 209, 0.3);
}

.refresh-btn:active {
  background-color: #389FC0;
  transform: scale(0.95);
}

.refresh-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.refresh-text {
  font-weight: 500;
}

/* section通用样式 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 手势热力图 */
.heatmap-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.heatmap-grid {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.heatmap-row {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.heatmap-row:last-child {
  margin-bottom: 0;
}

.heatmap-node {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.heatmap-node:active {
  transform: scale(1.1);
}

.heatmap-value {
  font-size: 20rpx;
  font-weight: 600;
  color: #333;
}

/* 热力图图例 */
.heatmap-legend {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
}

.legend-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.legend-color {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.legend-text {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
}

/* 图表canvas */
.chart-canvas {
  width: 100%;
  height: 300px;
  display: block;
}

/* 统计摘要 */
.summary-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 20rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 36rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  flex: 1;
  min-width: 200rpx;
  max-width: 280rpx;
}

.summary-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #45B7D1;
  line-height: 1;
  margin-bottom: 12rpx;
}

.summary-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .statistics-container {
    padding: 12rpx;
  }

  .section {
    padding: 20rpx;
  }

  .page-title {
    font-size: 32rpx;
  }

  .title-text {
    font-size: 28rpx;
  }

  .summary-container {
    flex-direction: column;
  }

  .summary-item {
    min-width: 100%;
    max-width: 100%;
  }

  .heatmap-legend {
    flex-direction: column;
    gap: 16rpx;
  }
}
