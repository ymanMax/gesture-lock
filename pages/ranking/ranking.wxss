.container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 排行榜类型切换 */
.tab-container {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  color: rgba(255, 255, 255, 0.8);
}

.tab.active {
  background: rgba(255, 255, 255, 0.3);
  color: white;
  transform: scale(1.05);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 排行榜列表 */
.ranking-list {
  margin-bottom: 30rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.ranking-item:active {
  transform: scale(0.98);
}

.rank-number {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  background: #f5f5f5;
  border-radius: 50%;
  margin-right: 20rpx;
}

.rank-number.top-three {
  color: white;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
}

.rank-number.top-three:nth-child(1) {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
}

.rank-number.top-three:nth-child(2) {
  background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
}

.rank-number.top-three:nth-child(3) {
  background: linear-gradient(135deg, #cd7f32 0%, #e9a866 100%);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  border: 4rpx solid #f0f0f0;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.score-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.score {
  margin-bottom: 8rpx;
}

.score-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.score-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.badge {
  font-size: 32rpx;
}

/* 我的排名 */
.my-rank-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.my-rank-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.rank-left {
  display: flex;
  align-items: center;
}

.user-avatar.large {
  width: 100rpx;
  height: 100rpx;
  margin-right: 25rpx;
}

.rank-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: bold;
}

.rank-right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rank-number.top-ten {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.rank-desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 数据统计 */
.statistics-section {
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  flex: 1;
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 登录提示 */
.login-prompt {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
}

.prompt-content {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  max-width: 500rpx;
  width: 100%;
}

.prompt-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.prompt-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.login-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.login-btn:active {
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: rgba(255, 255, 255, 0.7);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
}
