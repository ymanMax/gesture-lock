.verify-password-page {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

.message-box {
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  margin-bottom: 50rpx;
  font-size: 28rpx;
  text-align: center;
}

.message-box.success {
  background-color: #f0f9ff;
  color: #1890ff;
  border: 1rpx solid #bae7ff;
}

.message-box.error {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.message-box.info {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #d9f7be;
}

.message-box.warning {
  background-color: #fff7e6;
  color: #fa8c16;
  border: 1rpx solid #ffd591;
}

.gesture-container {
  display: flex;
  justify-content: center;
  margin-bottom: 50rpx;
}

