@media screen and (max-width: 750rpx) {
  .verify-password-page {
    padding: 30rpx 20rpx;
    justify-content: flex-start;
    padding-top: 100rpx;
  }

  .page-title {
    font-size: 36rpx;
  }

  .lock-section {
    padding: 40rpx 30rpx;
  }

  .gesture-container {
    margin-bottom: 40rpx;
  }

  .forgot-password-section {
    margin-top: 60rpx;
  }
}

/* æ¨ªå±é€‚é… */
@media screen and (orientation: landscape) {
  .verify-password-page {
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
  }

  .page-header {
    flex: 1;
    margin-right: 40rpx;
  }

  .gesture-container {
    flex: 1;
  }

  .forgot-password-section {
    position: absolute;
    bottom: 40rpx;
    right: 40rpx;
    margin-top: 0;
  }
}