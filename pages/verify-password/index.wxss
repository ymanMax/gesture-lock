.lock-section {
  text-align: center;
  padding: 60rpx 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.lock-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  background-color: #fff2f0;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.lock-icon::after {
  content: 'ğŸ”’';
  font-size: 60rpx;
}

.lock-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.lock-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.lock-timer {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* å¿˜è®°å¯†ç æ ·å¼ */
.forgot-password-section {
  text-align: center;
  margin-top: auto;
}

.forgot-password-btn {
  font-size: 28rpx;
  color: #1890ff;
  text-decoration: underline;
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  transition: background-color 0.3s ease;
}

.forgot-password-btn:active {
  background-color: #f0f9ff;
}

/* éªŒè¯çŠ¶æ€æ ·å¼ */
.verifying-section {
  text-align: center;
  padding: 60rpx 40rpx;
}

.verifying-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.verifying-text {
  font-size: 28rpx;
  color: #666;
}

/* å¯†ç è¾“å…¥æç¤º */
.password-hint {
  text-align: center;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

/* é”™è¯¯æ¬¡æ•°æ˜¾ç¤º */
.error-count {
  text-align: center;
  font-size: 26rpx;
  color: #ff4d4f;
  margin-bottom: 30rpx;
}

.error-count.warning {
  color: #fa8c16;
  font-weight: bold;
}

.error-count.danger {
  color: #ff4d4f;
  font-weight: bold;
}

