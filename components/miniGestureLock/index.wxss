/* 主题变量定义 */
.gesture-lock {
  position: relative;
  margin: 0 auto;
}

/* 科技风主题 */
.gesture-lock[class*="tech"] {
  background: linear-gradient(135deg, #0c0c0c 0%, #1a1a2e 100%);
  border-radius: 20rpx;
  box-shadow:
    0 0 40rpx rgba(0, 255, 255, 0.1),
    inset 0 0 40rpx rgba(0, 255, 255, 0.05);
}

.gesture-lock[class*="tech"] .cycle {
  background: radial-gradient(circle, #1a1a2e 0%, #0c0c0c 100%);
  border: 3rpx solid #00ffff;
  box-shadow:
    0 0 20rpx rgba(0, 255, 255, 0.3),
    inset 0 0 10rpx rgba(0, 255, 255, 0.2);
}

.gesture-lock[class*="tech"] .cycle.check {
  background: radial-gradient(circle, #00ffff 0%, #0080ff 100%);
  border-color: #00ffff;
  box-shadow:
    0 0 30rpx rgba(0, 255, 255, 0.6),
    inset 0 0 15rpx rgba(255, 255, 255, 0.5);
}

.gesture-lock[class*="tech"] .line {
  background: linear-gradient(90deg, transparent, #00ffff, transparent);
  box-shadow: 0 0 15rpx rgba(0, 255, 255, 0.5);
}

/* 简约风主题 */
.gesture-lock[class*="simple"] {
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
}

.gesture-lock[class*="simple"] .cycle {
  background: #f5f5f5;
  border: 3rpx solid #e0e0e0;
}

.gesture-lock[class*="simple"] .cycle.check {
  background: #2196f3;
  border-color: #2196f3;
}

.gesture-lock[class*="simple"] .line {
  background: #2196f3;
}

/* 卡通风主题 */
.gesture-lock[class*="cartoon"] {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 24rpx;
  box-shadow:
    0 8rpx 32rpx rgba(252, 182, 159, 0.4),
    inset 0 0 60rpx rgba(255, 255, 255, 0.3);
}

.gesture-lock[class*="cartoon"] .cycle {
  background: radial-gradient(circle, #fff9c4 0%, #ffecb3 100%);
  border: 4rpx solid #ff9800;
  box-shadow:
    0 4rpx 12rpx rgba(255, 152, 0, 0.3),
    inset 0 2rpx 8rpx rgba(255, 255, 255, 0.6);
}

.gesture-lock[class*="cartoon"] .cycle.check {
  background: radial-gradient(circle, #b3e5fc 0%, #81d4fa 100%);
  border-color: #0288d1;
  box-shadow:
    0 6rpx 20rpx rgba(2, 136, 209, 0.4),
    inset 0 3rpx 12rpx rgba(255, 255, 255, 0.7);
}

.gesture-lock[class*="cartoon"] .line {
  background: linear-gradient(90deg, transparent, #0288d1, transparent);
  box-shadow: 0 0 20rpx rgba(2, 136, 209, 0.5);
  border-radius: 4rpx;
}

/* 通用样式 */
.cycle {
  position: absolute;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.cycle::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30%;
  height: 30%;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
}

.cycle.check::after {
  width: 60%;
  height: 60%;
  background: rgba(255, 255, 255, 0.8);
  animation: pulse 0.6s ease;
}

.line {
  position: absolute;
  height: 6rpx;
  transform-origin: left center;
  border-radius: 3rpx;
}

/* 错误状态 */
.gesture-lock.error .cycle.check {
  background: radial-gradient(circle, #ff5252 0%, #d32f2f 100%);
  border-color: #ff5252;
  animation: shake 0.5s ease;
}

.gesture-lock.error .line {
  background: linear-gradient(90deg, transparent, #ff5252, transparent);
  animation: shake 0.5s ease;
}

/* 动画效果 */
@keyframes pulse {
  0% {
    transform: translate(-50%, -50%) scale(0.5);
    opacity: 0;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.8;
  }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5rpx); }
  75% { transform: translateX(5rpx); }
}

/* 粒子效果 */
.particle {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
}

.particle.tech {
  background: #00ffff;
  box-shadow: 0 0 10rpx rgba(0, 255, 255, 0.8);
}

.particle.simple {
  background: #2196f3;
}

.particle.cartoon {
  background: #0288d1;
  box-shadow: 0 0 15rpx rgba(2, 136, 209, 0.6);
}
